{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "outDir": "./built",
    "moduleResolution": "Node",
    "lib": ["es2015", "DOM", "DOM.Iterable"],
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
